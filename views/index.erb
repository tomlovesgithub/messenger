<!DOCTYPE html>
<head><link rel="stylesheet" type="text/css" href="<%= url("/style.css")%>"></head>
<body>
  <center>
    <div id=header><h1 id="title" >ðŸ¤™</h1></div>

    <%= erb(:textbox, :locals => { :object => "newmessage", :content => nil, :value => nil }) %>

    <div>
      <% @messages.reverse.each do |message| %>
      <div class="indv_msg" id="indv_msg-<%= message.id %>"<br>
        <%=message.display_time %><br>
        <a href=<%="/messages/#{message.id}"%>>
          ______________________________<br>
          <%= message.preview %><br>
          ______________________________<br>
        </a>
        <br>
        <form id="buttons" action="/<%= message.id %>" method="post">
          <input type='hidden' name='_method' value='DELETE'/>
          <input type="submit" value="Delete" />
        </form>

        <form id="buttons" action="/<%= message.id %>/update" method="get">
          <input type="submit" value="Update" />
        </form>

      </div>
    </div>

    <% end %>

  </center>
</body>
